<div class="container" style="margin-top: 30px">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3>Course Information</h3>
    </div>
    <div class="panel-body">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Course ID:</strong>
        <%= @course.id %>
      </p>

      <p>
        <strong>Title:</strong>
        <%= @course.title %>
      </p>

      <p>
        <strong>Objective:</strong>
        <%= @course.objective %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @course.description %>
      </p>

      <p>
        <strong>Instructor:</strong>
        <%= @course.instructor %>
      </p>
    </div>
  </div>
  <div class="row" style="text-align: center">
    <div class="btn-group" role="group" aria-label="Basic example" style="margin-left: 15px">
      <%= link_to 'Edit', edit_course_path(@course) ,class: "btn btn-primary"%>
      <%= link_to "Print Course Information (PDF)", course_path(@course, format: 'pdf'),class: "btn btn-primary"%>
      <%= link_to 'Back', courses_path ,class: "btn btn-primary"%>
    </div>
  </div>
</div>

