<div class="container" style="margin-top: 30px;">
  <div class="row">
    <div class="col-sm-10">
      <h1 style="margin-left: 15px">Manage Student</h1>
    </div>
  </div>
  <table class="table table-hover">
    <thead class="bg-light">
    <tr>
      <th>Course</th>
      <th>Name</th>
      <th>Semester</th>
      <th>Year</th>
      <th>Grade</th>
      <th>Action</th>
    </tr>
    </thead>

    <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.course_id %></td>
        <td><%= enrollment.user_id %></td>
        <td><%= enrollment.semester %></td>
        <td><%= enrollment.year %></td>
        <td><%= enrollment.grade %></td>

        <td>
          <%#= link_to 'Grade', enrollment_grade_path(enrollment) ,class: "btn btn-outline-success btn-sm"%>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

    <%= link_to 'Back', root_path ,class: "btn btn-info"%>

</div>